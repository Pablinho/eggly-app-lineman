<!DOCTYPE html>
<html ng-app="Eggly">
  <head>
    <title>Angular JS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/app.css" media="all" />
  </head>
  <body>
    <div class="container-fluid">
        <div class="row" ng-controller="MainController">
            <div class="col-xs-6 col-md-4 sidebar">
                <a href="#" ng-click="setCurrentCategory(null)"><img class="logo" src="img/logotype.png"></a>
                <ul class="nav nav-sidebar">
                    <li ng-repeat="category in categories" ng-class="{active:isCurrentCategory(category)}">
                        <a href="#" ng-click="setCurrentCategory(category)">{{category.name}}</a>
                    </li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8 main">
                <div ng-class="{active:isBookmarkSelected(bookmark)}" ng-repeat="bookmark in bookmarks | filter:{category:currentCategory.name}">
                    <button type="button" ng-click="deleteBookmark(bookmark)" class="close">&times;</button>
                    <button type="button" class="btn btn-link" ng-click="loadEditedBookmark(bookmark); startEditing()"><span class="glyphicon glyphicon-pencil"></span></button>
                    <a href="{{bookmark.url}}" target="_blank">{{bookmark.title}}</a>
                </div>
                <hr/>
                <div ng-show="isCategorySelected()">
                    <div ng-hide="isEditing()">
                        <button type="button" class="btn btn-link" ng-click="startCreating()"><span class="glyphicon glyphicon-plus"></span></span></button>
                         Create bookmark
                    </div>
                    <div ng-show="isCreating()">
                        <form role="form" ng-submit="createBookmark(newBookmark)">
                          <div class="form-group">
                            <label for="exampleInputEmail1">Title</label>
                            <input type="text" class="form-control" id="exampleInput1" placeholder="Enter title" ng-model="newBookmark.title">
                          </div>
                          <div class="form-group">
                            <label for="exampleInputPassword1">Url</label>
                            <input type="text" class="form-control" id="exampleInput2" placeholder="Enter url" ng-model="newBookmark.url">
                          </div>
                          <button type="submit" class="btn btn-default">Submit</button>
                          <button type="button" class="btn btn-default" ng-click="cancelCreating()"><span class="glyphicon glyphicon-minus"></span> Cancel</button>
                        </form>
                    </div>
                </div>
                <div ng-show="isEditing()">
                        <form role="form" ng-submit="updateBookmark(editedBookmark)">
                          <div class="form-group">
                            <label for="exampleInputEmail1">Title</label>
                            <input type="text" class="form-control" id="exampleInput1" placeholder="Enter title" ng-model="editedBookmark.title">
                          </div>
                          <div class="form-group">
                            <label for="exampleInputPassword1">Url</label>
                            <input type="text" class="form-control" id="exampleInput2" placeholder="Enter url" ng-model="editedBookmark.url">
                          </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                        <button type="button" class="btn btn-default btn-sm" ng-click="cancelEditing()"><span class="glyphicon glyphicon-minus"></span> Cancel</button>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
    
    <div class="container-fluid" >
        <div class="row" ng-controller="TrainController">
            Ctr Train
            <input type="text" ng-model="color">
            Dir Train
            <train color="color"></train>
        </div>
    </div>
    <div class="container-fluid" ng-controller="ListenController">
        <div author play="ListenTo(author)"></div>
        <div author play="ListenTo(author)"></div>
    </div>
    <div class="container-fluid" >
        <cars></cars><bike color="blue"></bike><moto color="black"></moto>
        <div class="row" ng-controller="SkateController">
            Ctr Scate
            <input type="text" ng-model="color">
            skate:<skate color="{{color}}"></skate>
        </div>
    </div>
    <div class="container-fluid" >
        <numbers odd>1</numbers>
        <numbers even prime>2</numbers>
        <numbers odd prime>3</numbers>
        <numbers even>4</numbers>
        <numbers odd prime>5</numbers>
        <numbers even>6</numbers>
        <numbers odd>7</numbers>
        <div class="row" ng-controller="PreFooterController">
            Pre footer: 
            <input type="text" ng-model="data.element">
            {{data.element}}
        </div>
        <div class="row" ng-controller="FooterController">
           <div enter="deleteTweets()">Asi interactu√°n directives con controllers</div>
           <div>Footer:</div>
           <input type="text" ng-model="data.element">
            {{data.element|reverse}}
        </div>
    </div>
    
    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>
